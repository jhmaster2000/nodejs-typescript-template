{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": ".*.test.ts",
    "moduleFileExtensions": ["ts", "js"],
    "extensionsToTreatAsEsm": [".ts"],
    "globals": {
        "ts-jest": {
            "useESM": true,
            "tsconfig": "<rootDir>/tests/tsconfig.json"
        }
    },
    "moduleNameMapper": {
        "^(\\.{1,2}/.*)\\.js$": "$1"
    }
}
