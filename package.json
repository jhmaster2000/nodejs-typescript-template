{
    "name": "ts-esm-project-template",
    "version": "1.0.0",
    "description": "Modern TypeScript project template",
    "keywords": [
        "typescript",
        "modules",
        "esm",
        "esnext"
    ],
    "license": "MIT",
    "author": "jhmaster",
    "type": "module",
    "main": "dist/main.js",
    "scripts": {
        "ts": "node --experimental-specifier-resolution=node --loader ts-node/esm --no-warnings src/testfile.ts",
        "js": "npm run build && npm start",
        "start": "node --experimental-specifier-resolution=node -r source-map-support/register dist/main.js",
        "build": "npm run clean && tsc",
        "clean": "node -e \"fs.rm('dist', { recursive: true }, () => {})\"",
        "test": "npm run sync-tsc && jest --coverage",
        "lint": "eslint src/**/*.ts tests/**/*.ts",
        "lint-fix": "eslint --fix src/**/*.ts tests/**/*.ts",
        "sync-tsc": "node -e \"let{readSync:r,writeSync:w}=require('jsonc');let o='compilerOptions';let p='tsconfig.json';let t=r(p);delete t.include;t[o].noEmitOnError=!1;t[o].rootDir='../';t[o].types=[...(t[o].types??[]),'jest'];w('tests/'+p,t,{space:4})\""
    },
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.23",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "eslint": "^8.12.0",
        "eslint-plugin-deprecation": "^1.3.2",
        "eslint-plugin-jest": "^26.1.3",
        "eslint-plugin-unicorn": "^42.0.0",
        "jest": "^27.5.1",
        "jsonc": "^2.0.0",
        "source-map-support": "^0.5.21",
        "ts-jest": "^27.1.4",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3",
        "typings-esm-loader": "^1.0.1"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "dependencies": {
        "esmultiloader": "^1.0.0",
        "yaml": "^2.0.0"
    }
}
