{
    "name": "ts-esm-project-template",
    "version": "1.0.0",
    "description": "Modern TypeScript project template",
    "keywords": [
        "typescript",
        "modules",
        "esm",
        "esnext"
    ],
    "license": "MIT",
    "author": "jhmaster",
    "type": "module",
    "main": "run.js",
    "scripts": {
        "build": "npm run clean && tsc",
        "clean": "rm -f *.js *.js.map",
        "lint": "eslint src/**/*.ts",
        "start": "node --experimental-specifier-resolution=node -r source-map-support/register dist/main.js",
        "test": "jest"
    },
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.23",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "eslint": "^8.12.0",
        "eslint-plugin-deprecation": "^1.3.2",
        "eslint-plugin-jest": "^26.1.3",
        "eslint-plugin-unicorn": "^41.0.1",
        "jest": "^27.5.1",
        "source-map-support": "^0.5.21",
        "ts-jest": "^27.1.4",
        "typescript": "^4.6.3"
    },
    "engines": {
        "node": ">=14.0.0"
    }
}
